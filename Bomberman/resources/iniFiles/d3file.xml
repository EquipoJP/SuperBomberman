<escena 
	ambiente="0.3" 
	epsilon="1e-6"
	multithreading="2"
	cajas="1">

	<debug>
		<ambiente>1</ambiente>
		<difusa>1</difusa>
		<especular>1</especular>
	</debug>

	<!-- punto de vista (x, y, z) -->
	<pov x="100" y="100" z="100">
		<columnas>640</columnas>
		<filas>480</filas>
		<anchura>4</anchura>
		<altura>3</altura>
		<focal>5</focal>
	</pov>
	
	<!-- lista de focos -->
	<focos>
		<foco x="50" y="40" z="5">
			<intensidad>4</intensidad>
			<color r="255" g="255" b="255"/>
		</foco>
	</focos>
	
	<!-- lista de cajas -->
	<cajas>
		<!-- lista de objetos dentro de una caja -->
		<caja>
			<!-- plano suelo (rojo) -->
			<plano x="0" y="0" z="0">
				<topleft x="0" y="0" z="-20"/>
				<topright x="20" y="0" z="0"/>
				<bottomleft x="0" y="-50" z="20"/>
				<bottomright x="20" y="0" z="20"/>
				
				<global>1</global>	<!-- escala global -->
				<escala x="1" y="1" z="1"/>	<!-- escala local -->
				<rotacion x="0" y="0" z="0"/>	<!-- rotacion en ejes X, Y, Z -->
				<simetria x="0" y="0" z="0"/>	<!-- simetria en ejes X, Y, Z -->
				<cizalla x="0" y="0" z="0"/>	<!-- cizalla en ejes X, Y, Z -->
				<order>12345678</order>	<!-- orden de aplicar matrices -->
				
				<!-- material -->
				<material>
					<color r="255" g="0" b="0"/>
					<difusa>0.3</difusa>
					<especular>0</especular>
					<reflectante>0.7</reflectante>
					<transparente>0</transparente>
					<shiny>100</shiny>
					<indiceRefraccion>1</indiceRefraccion>
				</material>
			</plano>
		</caja>
		
		<caja>
			<!-- bomberman -->
            <bomberman path="3DModels/Bomberman.ply" x="0" y="0" z="0">
                
                <global>1.5</global>    <!-- escala global -->
                <escala x="1" y="1" z="1"/>    <!-- escala local -->
                <rotacion x="0" y="0" z="0"/>    <!-- rotacion en ejes X, Y, Z -->
                <simetria x="0" y="0" z="0"/>    <!-- simetria en ejes X, Y, Z -->
                <cizalla x="0" y="0" z="0"/>    <!-- cizalla en ejes X, Y, Z -->
                <order>12345678</order>	<!-- orden de aplicar matrices -->
                
                <!-- material -->
				<material>
					<!-- <color r="255" g="0" b="0"/> -->
					<difusa>0.5</difusa>
					<especular>0.4</especular>
					<reflectante>0</reflectante>
					<transparente>0</transparente>
					<shiny>130</shiny>
					<indiceRefraccion>1</indiceRefraccion>
				</material>
            </bomberman>
		</caja>
		
		<caja>
			<!-- enemigo -->
            <enemigo path="3DModels/Bomberman.ply" x="0" y="0" z="0">
                
                <global>1.5</global>    <!-- escala global -->
                <escala x="1" y="1" z="1"/>    <!-- escala local -->
                <rotacion x="0" y="0" z="0"/>    <!-- rotacion en ejes X, Y, Z -->
                <simetria x="0" y="0" z="0"/>    <!-- simetria en ejes X, Y, Z -->
                <cizalla x="0" y="0" z="0"/>    <!-- cizalla en ejes X, Y, Z -->
                <order>12345678</order>	<!-- orden de aplicar matrices -->
                
                <!-- material -->
				<material>
					<!-- <color r="255" g="0" b="0"/> -->
					<difusa>0.5</difusa>
					<especular>0.4</especular>
					<reflectante>0</reflectante>
					<transparente>0</transparente>
					<shiny>130</shiny>
					<indiceRefraccion>1</indiceRefraccion>
				</material>
            </enemigo>
		</caja>
		
		<caja>
			<!-- bloque -->
            <bloque path="3DModels/Bomberman.ply" x="0" y="0" z="0">
                
                <global>1.5</global>    <!-- escala global -->
                <escala x="1" y="1" z="1"/>    <!-- escala local -->
                <rotacion x="0" y="0" z="0"/>    <!-- rotacion en ejes X, Y, Z -->
                <simetria x="0" y="0" z="0"/>    <!-- simetria en ejes X, Y, Z -->
                <cizalla x="0" y="0" z="0"/>    <!-- cizalla en ejes X, Y, Z -->
                <order>12345678</order>	<!-- orden de aplicar matrices -->
                
                <!-- material -->
				<material>
					<!-- <color r="255" g="0" b="0"/> -->
					<difusa>0.5</difusa>
					<especular>0.4</especular>
					<reflectante>0</reflectante>
					<transparente>0</transparente>
					<shiny>130</shiny>
					<indiceRefraccion>1</indiceRefraccion>
				</material>
            </bloque>
		</caja>
	</cajas>
	
</escena>